@model DoctorSystem.CollectionViewModels.ReviewCollection
@{
    ViewBag.Title = "MakeReview";
}

<style>
    /* General Styles */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc; /* Light background */
        color: #333;
    }

    /* Header Styling */
    h2 {
        color: #007bff; /* Blue color */
        text-align: center;
        margin-top: 20px;
    }

    /* Form Styling */
    .form-horizontal {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 30px auto;
        position: center;
    }

    .form-group {
        margin-bottom: 20px;
        color: #007bff;
    }

    .control-label {
        font-weight: bold;
        color: #007bff;
    }

    .col-md-10 {
        margin-top: 8px;
    }

    /* DropDown List and Editor Styling */
    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

        .form-control:focus {
            border-color: #0044cc; /* Blue border on focus */
            box-shadow: 0 0 5px rgba(0, 68, 204, 0.5);
        }

    /* Validation Messages */
    .text-danger {
        color: #d9534f;
    }

    /* Checkboxes Styling */
    .radio-inline {
        margin-right: 15px;
    }

    /* Submit Button Styling */
    .btn-default {
        background-color: #007bff; /* Blue button */
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
    }

        .btn-default:hover {
            background-color: #0033a0; /* Darker blue on hover */
        }

    /* Action Link */
    a {
        color: #0044cc;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h2>MakeReview</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Reviews.Doctor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Reviews.DoctorId, new SelectList(Model.Doctors, "Id", "FullName"), "Select Doctor", new { @id = "dropdown", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Reviews.DoctorId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reviews.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Reviews.Rating, new List<SelectListItem>
           {
               new SelectListItem() {Text = "0"},
               new SelectListItem() {Text = "1"},
               new SelectListItem() {Text = "1.5"},
               new SelectListItem() {Text = "2"},
               new SelectListItem() {Text = "2.5"},
               new SelectListItem() {Text = "3"},
               new SelectListItem() {Text = "3.5"},
               new SelectListItem() {Text = "4"},
               new SelectListItem() {Text = "4.5"},
               new SelectListItem() {Text = "5"},
           }, "Select Rating",new { @id = "dropdown", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Reviews.Rating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reviews.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Reviews.Comment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Reviews.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

