@model DoctorSystem.Models.CancelAppointment
@{
    ViewBag.Title = "cancelAppointments";
}

<style>
    .cancel-container {
        max-width: 500px;
        margin: 60px auto;
        background-color: #f8fafc;
        padding: 30px 40px;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(0, 0, 128, 0.1);
        font-family: 'Segoe UI', sans-serif;
    }

    .form-title {
        text-align: center;
        color: #1e3a8a; /* deep blue */
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #1e40af;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #cbd5e1;
        border-radius: 6px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
            outline: none;
        }

    .text-danger {
        color: #dc2626;
        font-size: 14px;
        margin-top: 5px;
    }

    .btn {
        padding: 12px 24px;
        font-size: 16px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #ef4444;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #dc2626;
        }

</style>

<div class="cancel-container">
    <h2 class="form-title">Cancel Appointment</h2>

    @using (Html.BeginForm("cancelAppointments", "Patient", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.AppointmentNumber, "Enter Appointment Number", new { @class = "form-label" })
            @Html.EditorFor(m => m.AppointmentNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.AppointmentNumber, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Cancel Appointment" class="btn btn-danger" />
        </div>
    }
</div>

