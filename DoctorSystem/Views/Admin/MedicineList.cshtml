@model IEnumerable<DoctorSystem.Models.Medicine>

@{
    ViewBag.Title = "MedicineList";
}

<h2 class="fw-bold">Medicine List</h2>

<p>
    @Html.ActionLink("Add New", "AddMedicine")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
    </tr>
}

</table>
