<style>
    /* General Styles */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc; /* Light background */
        color: #333;
    }

    /* Header Styling */
    h2 {
        color: #007bff; /* Blue color */
        text-align: center;
        margin-top: 20px;
    }

    /* Form Styling */
    .form-horizontal {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 30px auto;
        position: center;
    }

    .form-group {
        margin-bottom: 20px;
        color:#007bff ;
    }

    .control-label {
        font-weight: bold;
        color: #007bff;
    }

    .col-md-10 {
        margin-top: 8px;
    }

    /* DropDown List and Editor Styling */
    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

        .form-control:focus {
            border-color: #0044cc; /* Blue border on focus */
            box-shadow: 0 0 5px rgba(0, 68, 204, 0.5);
        }

    /* Validation Messages */
    .text-danger {
        color: #d9534f;
    }

    /* Checkboxes Styling */
    .radio-inline {
        margin-right: 15px;
    }

    /* Submit Button Styling */
    .btn-default {
        background-color: #007bff; /* Blue button */
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
    }

        .btn-default:hover {
            background-color: #0033a0; /* Darker blue on hover */
        }

    /* Action Link */
    a {
        color: #0044cc;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

</style>

