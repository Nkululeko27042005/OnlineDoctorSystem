@model DoctorSystem.Models.Medicine

@{
    ViewBag.Title = "AddMedicine";
}

<style>
    /* General Page Styling */
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f9fc; /* Light blue background */
        margin: 0;
        padding: 0;
    }

    /* Heading */
    h2 {
        color: #007bff; /* Primary blue color */
        font-size: 2rem;
        text-align: center;
        margin-top: 20px;
    }

    /* Form Container */
    .form-horizontal {
        background-color: #ffffff; /* White background for the form */
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        width: 80%;
        max-width: 600px;
    }

    /* Form Group */
    .form-group {
        margin-bottom: 15px;
    }

    /* Labels */
    .control-label {
        font-weight: bold;
        color: #007bff; /* Blue for labels */
    }

    /* Input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
    }

    /* Submit Button */
    .btn {
        background-color: #007bff; /* Blue button */
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

    /* Validation Messages */
    .text-danger {
        color: #ff4d4d; /* Red color for error messages */
    }

    /* Action Link */
    div a {
        display: inline-block;
        margin-top: 20px;
        color: #007bff;
        font-size: 1rem;
    }

        div a:hover {
            text-decoration: underline;
        }

</style>

<h2 class="fw-bold">Medicine</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Medicine Name",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
